<UserControl x:Class="CMusicPlayer.UI.General.SearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CMusicPlayer.UI.General"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" x:ClassModifier="internal">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBox
                Name="SearchBox"
                Width="500"
                CaretBrush="White"
                Foreground="White"
                Background="Transparent"
                TextChanged="OnTextChanged"
                Margin="5" />
            <Button Click="ClearText" Width="15" Height="15">
                <Image Source="../../Images/close_icon.png" />
            </Button>
        </StackPanel>
    </Grid>
</UserControl>