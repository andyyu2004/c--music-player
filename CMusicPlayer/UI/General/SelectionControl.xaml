<UserControl x:Class="CMusicPlayer.UI.General.SelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CMusicPlayer.UI.General"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:ClassModifier="internal">
    <UserControl.Resources>
        <Style TargetType="MenuItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#222222"/>
        </Style>

    </UserControl.Resources>

    <TabControl Background="Transparent" BorderThickness="0">
        <TabItem Header="Tracks" PreviewMouseLeftButtonDown="ToTracksView"/>
        <TabItem Header="Albums" PreviewMouseLeftButtonDown="ToAlbumsView"/>
        <TabItem Header="Artists" PreviewMouseLeftButtonDown="ToArtistsView"/>
        <TabItem Header="Genres" PreviewMouseLeftButtonDown="ToGenresView"/>
    </TabControl>
</UserControl>
